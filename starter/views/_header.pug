header.header 
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user

        if user
            // Se o email NAO estiver confirmado
            if !user.emailVerified
                    a.nav__el.nav__warning(href="/check-email?email=" + user.email) Confirme seu e-mail


            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}`)
                span= user.username.split(' ')[0]

        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el--cta(href='/signup') Sign Up
